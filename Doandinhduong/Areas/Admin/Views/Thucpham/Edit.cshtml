@model Model.EF.Thucpham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Asset/admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    Nhập thông tin.
                </div>
                <div class="card-body">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "Thucpham", FormMethod.Post))
                        {@Html.HiddenFor(model => model.ID_thucpham)
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Ten_thucpham)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Ten_thucpham, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Ten_thucpham)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Image_thucpham)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Image_thucpham, new { HtmlAtrributes = new { @class = "form-control", @placehoder = " ", @autofocus = "autofocus" }, id = "txtImage" })

                                <a id="btnSelectImage" href="#">Chọn ảnh</a>
                                @Html.ValidationMessageFor(model => model.Image_thucpham)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Mota)
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.Mota, new { HtmlAtrributes = new { @class = "form-control", @placehoder = " ", @autofocus = "autofocus" }, id = "txtContent" })
                                @Html.ValidationMessageFor(model => model.Mota)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Calories)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Calories, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Calories)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Total_Fat)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Total_Fat, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Total_Fat)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Cholesterol)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Cholesterol, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Cholesterol)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Sodium)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Sodium, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Sodium)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Total_Carbohydrate)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Total_Carbohydrate, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Total_Carbohydrate)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Total_Sugar)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Total_Sugar, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Total_Sugar)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Protein)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Protein, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Protein)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.ID_loaithucpham)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownListFor(model => model.ID_loaithucpham, null, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.ID_loaithucpham)
                            </div>


                            <button type="submit" class="btn btn-primary btn-block">Cập nhật </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



