@model Model.EF.about

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Asset/admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    Nhập thông tin.
                </div>
                <div class="card-body">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Create", "GioiThieu", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Ten)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Ten, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Ten)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.MetaTitle)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.MetaTitle)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Images)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Images, new { HtmlAtrributes = new { @class = "form-control", @placehoder = " ", @autofocus = "autofocus" }, id = "txtImage" })
                                <a id="btnSelectImage" href="#">Chọn ảnh</a>
                                @Html.ValidationMessageFor(model => model.Images)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Mota)
                            </div>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.Mota, new { HtmlAtrributes = new { @class = "form-control", @placehoder = " ", @autofocus = "autofocus" }, id = "txtContent" })
                                @Html.ValidationMessageFor(model => model.Mota)
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.Trangthai)
                            </div>
                            <div class="editor-field">
                                @Html.CheckBoxFor(model => model.Trangthai, new { @class = "form-control", @placehoder = "", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.Trangthai)
                            </div>
                            <button type="submit" class="btn btn-primary btn-block"> Tạo </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










